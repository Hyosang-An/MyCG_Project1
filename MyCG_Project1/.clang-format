BreakBeforeBraces: Allman      # 중괄호를 항상 다음 줄에 작성

# 짧은 함수 정의를 한 줄로 작성
AllowShortFunctionsOnASingleLine: All

# switch-case 문 스타일
IndentCaseLabels: true         # case 레이블을 들여쓰기
BraceWrapping:
  AfterCaseLabel: true         # 각 case 레이블 뒤에 중괄호 추가

# 들여쓰기 설정
UseTab: Never                  # 공백으로 들여쓰기
IndentWidth: 4                 # 공백 4칸 들여쓰기
TabWidth: 4                    # 탭 크기는 4칸 (탭이 있을 경우)

# 기타 스타일
ColumnLimit: 100               # 한 줄의 최대 길이 제한 (100자)
AlignTrailingComments: true    # 주석을 오른쪽으로 정렬
SpacesInParentheses: false     # 괄호 안에 공백 삽입 금지
SpaceBeforeParens: ControlStatements   # 제어문에서 괄호 앞 공백 삽입
SortIncludes: false             # include 구문 정렬 금지
PointerAlignment: Left         # 포인터 정렬 방식 (왼쪽 정렬)
KeepEmptyLinesAtTheStartOfBlocks: false  # 블록 시작 부분에 빈 줄 유지 금지
MaxEmptyLinesToKeep: 2         # 최대 연속 빈 줄 수 (2줄까지 허용)
FixNamespaceComments: true     # 네임스페이스 주석 정리